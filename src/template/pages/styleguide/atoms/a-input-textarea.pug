extends ../../../layout/styleguide

append config
  - var template = 't-styleguide'
  - var title = "Inputs textarea"
  - var metaDesc = "Inputs Textarea - CSS / HTML"
  - var path = './../../'

block content
  .hf-head
    .hf-wrapper
      h1 Input textarea
      nav
        a(href="#types") Types
        a(href="#states") États
  .hf-wrapper
    .hf-content
      h2#types Types
      h3 Input textarea
    :code
      <textarea class="a-input-textarea" placeholder="Placeholder"></textarea>
    .hf-content
      h2#states États
      h3 État : disabled
    :code
      <textarea class="a-input-textarea" placeholder="Placeholder" disabled></textarea>
    .hf-content
      h3 État : readOnly
    :code
      <textarea class="a-input-textarea" placeholder="Placeholder" readOnly></textarea>
    .hf-content
      h3 État : error
    :code
      <textarea class="a-input-textarea a-input-textarea--error" placeholder="Placeholder"></textarea>
