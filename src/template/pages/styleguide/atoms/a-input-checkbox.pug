extends ../../../layout/styleguide

append config
  - var template = 't-styleguide'
  - var title = "Inputs checkbox"
  - var metaDesc = "Inputs checkbox - CSS / HTML"
  - var path = './../../'

block content
  .hf-head
    .hf-wrapper
      h1 Input checkbox
      nav
        a(href="#types") Types
        a(href="#states") États
  .hf-wrapper
    .hf-content
      h2#types Types
      h3 Input radio
    :code
      <div class="a-input-checkbox">
        <input id="input-checkbox-base-1" type="checkbox" name="input-checkbox-base"/>
        <label for="input-checkbox-base-1">Radio A</label>
      </div>
    .hf-content
      h2#states États
      h3 État : disabled
    :code
      <div class="a-input-checkbox">
        <input id="input-checkbox-base-2" type="checkbox" name="input-checkbox-base" disabled/>
        <label for="input-checkbox-base-2">Radio A</label>
      </div>
    .hf-content
      h3 État : error
    :code
      <div class="a-input-checkbox a-input-checkbox--error">
        <input id="input-checkbox-base-3" type="checkbox" name="input-checkbox-base"/>
        <label for="input-checkbox-base-3">Radio A</label>
      </div>
