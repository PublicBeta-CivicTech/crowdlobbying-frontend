extends ../../../layout/styleguide

append config
  - var template = 't-styleguide'
  - var title = "Formulaires Inline"
  - var metaDesc = "Formulaires Inline- CSS / HTML"
  - var path = './../../'

block content
  .hf-head
    .hf-wrapper
      h1 Formumaire inline
      nav
        a(href="#type") Type
  .hf-wrapper
    .hf-content
      h2#type Types
      h3 Formulaire inline simple
    :code
      <form class="m-form-inline" action="">
        <div class="m-form-inline__group">
          <label class="a-label" for="login">Identifiant</label>
          <div class="m-form-form__inline__input">
            <input class="a-input-text" id="login" type="text" name="login" placeholder="Identifiant" />
          </div>
        </div>
        <div class="m-form-inline-group">
          <label class="a-label" for="password">Mot de passe</label>
          <div class="m-form__inline__input">
            <input class="a-input-text" id="password" type="password" name="password" placeholder="Mot de passe" />
          </div>
        </div>
        <div class="m-form-inline__footer">
          <input class="a-button" type="submit" value="Connexion" />
        </div>
      </form>
