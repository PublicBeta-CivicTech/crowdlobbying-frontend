include ../config
block config
include ../mixins/all
include ../mixins/mixins
block data

doctype
html(lang=lang)
  head
    include ../partials/head

  body(class=template)

    //- SVG sprite sheet
    .visually-hidden
      include ../../assets/icons/symbol/icons.svg

    include ../partials/header

    section.hero
      .hero__inner
        +stripe()
          .hero__content
            h2 #{hero.heading}
            h1 #{hero.title}
            p #{hero.footerLine}
            button.action-button #{hero.callToAction}

    section.carousel
      .carousel__cards
        each item, index in carousel.cards
          +card(item.sender, item.recipeientName, item.recipientParty, item.subject, item.quote, index)
      +stripe()
        .carousel__info
          p.lead #{carousel.infoLead}
          p #{carousel.infoText}
          p: a(href='./campaign.html') Mehr erfahren

    +stripe()
      block content

    include ../partials/footer

    script(src= path + "assets/app.js", async)
